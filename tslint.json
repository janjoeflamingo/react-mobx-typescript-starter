{
  "project": "./tsconfig.json",
  "defaultSeverity": "warning",
  "extends": [
    "tslint:latest",
    "tslint-config-standard",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "configs/**/*",
      "node_modules/**/*",
      "**/__test__/**",
      "public/**/*",
      "dist/**/*"
    ]
  },
  "rules": {
    "eofline": true,
    "import-name": false,
    "no-default-export": false,
    "no-console": false,
    "trailing-comma": true,
    "member-access": [true, "no-public"],
    "ordered-imports": false,
    "member-ordering":false,
    "no-boolean-literal-compare": true,
    "object-literal-sort-keys":false,
    "jsx-no-lambda": false,
    "jsx-wrap-multiline": false,
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false,
    "interface-name": [true, "never-prefix"],
    "quotemark": [true, "single", "jsx-single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "semicolon": [true, "never", "ignore-interfaces"],
    "no-floating-promises": [false],

    "export-name": false,
    "no-submodule-imports": [true, "app", "i18n", "utils", "pages", "assets", "layouts", "settings", "services", "fragments", "components"],
    "no-implicit-dependencies": [true, ["app", "i18n", "utils", "pages", "assets", "layouts", "settings", "services", "fragments", "components"]],
    "no-import-side-effect": [true, { "ignore-module": "(jest-emotion|\\.html|\\.css|\\.test.tsx?)$" }],

    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ]
  },
  "exclude": ["node_modules"]
}
