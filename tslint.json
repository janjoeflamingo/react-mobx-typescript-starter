{
  "project": "./tsconfig.json",
  "defaultSeverity": "warning",
  "extends": [
    "tslint:latest",
    "tslint-config-standard",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "configs/**/*",
      "node_modules/**/*",
      "**/__test__/**",
      "public/**/*",
      "dist/**/*"
    ]
  },
  "rules": {
    "react-hooks-nesting": "error",
    "eofline": true,
    "import-name": false,
    "no-default-export": false,
    "no-console": false,
    "trailing-comma": true,
    "member-access": [true, "no-public"],
    "ordered-imports": false,
    "member-ordering":false,
    "no-boolean-literal-compare": true,
    "object-literal-sort-keys":false,
    "jsx-no-lambda": false,
    "jsx-wrap-multiline": false,
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false,
    "interface-name": [true, "never-prefix"],
    "quotemark": [true, "single", "jsx-single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "semicolon": [true, "never", "ignore-interfaces"],
    "no-floating-promises": [false],
    "no-shadowed-variable": false,
    "export-name": false,
    "no-submodule-imports": false,
    "no-implicit-dependencies": [true, ["core", "i18n", "store", "utils", "theme", "pages", "assets", "layouts", "settings", "services", "fragments", "components", "decorators"]],
    "no-import-side-effect": [true, { "ignore-module": "(jest-emotion|\\.html|\\.css|\\.test.tsx?)$" }],

    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ]
  },
  "exclude": ["node_modules"]
}
